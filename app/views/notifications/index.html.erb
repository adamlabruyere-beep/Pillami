<div class="max-w-2xl mx-auto mt-8"
     data-controller="polling"
     data-polling-url-value="/notifications/list"
     data-polling-interval-value="1000">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Mes notifications</h1>

  <div id="notifications_list">
    <% if @notifications.any? %>
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <%= render @notifications %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-8 text-center">
        <p class="text-gray-500">Aucune notification pour le moment.</p>
      </div>
    <% end %>
  </div>
</div>
