<div class="max-w-2xl mx-auto mt-8">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Mes notifications</h1>

  <% if @notifications.any? %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <% @notifications.each do |notification| %>
        <div id="notification_<%= notification.id %>" class="border-b last:border-b-0 p-4 <%= notification.status ? 'bg-white' : 'bg-blue-50' %>">
          <div class="flex items-start justify-between gap-4">
            <div class="flex-1">
              <div class="flex items-center gap-2">
                <% unless notification.status %>
                  <span class="inline-block w-2 h-2 bg-blue-500 rounded-full"></span>
                <% end %>
                <p class="font-semibold text-gray-800">
                  <%= notification.reminder&.medicament&.nom || "Médicament supprimé" %>
                </p>
              </div>
              <p class="text-sm text-gray-600 mt-1">
                Rappel prévu à <%= notification.reminder&.time&.strftime("%H:%M") || "—" %>
              </p>
              <p class="text-xs text-gray-400 mt-1">
                <%= time_ago_in_words(notification.created_at) %>
              </p>
            </div>
            <div class="flex items-center gap-2">
              <% unless notification.status %>
                <%= link_to user_notification_path(current_user, notification),
                    data: { turbo_method: :patch },
                    class: "text-sm text-blue-600 hover:text-blue-800 hover:underline" do %>
                  Marquer comme lue
                <% end %>
              <% else %>
                <span class="text-xs text-gray-400">Lue</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-8 text-center">
      <p class="text-gray-500">Aucune notification pour le moment.</p>
    </div>
  <% end %>
</div>
