<div class="py-8 px-4">
  <div class="max-w-4xl mx-auto">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Ma Pillathèque</h1>
        <p class="mt-2 text-sm text-gray-600"><%= @medicaments.count %> médicament(s)</p>
      </div>
      <%= link_to medicaments_path, class: "inline-block px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-center" do %>
        + Ajouter un médicament
      <% end %>
    </div>
    <div class="space-y-3">
      <% if @medicaments.any? %>
        <% unless @medicaments.empty? %>
          <div class="bg-white rounded-lg shadow p-4">
            <div class="flex justify-between items-start gap-3">
              <div class="flex-1 min-w-0">
                <h3 class="text-sm font-medium text-gray-900 wrap-break-word"> Nom du medicament</h3>
                <p class="text-sm text-gray-500 mt-1">Format</p>
              </div>
              <div>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full ">Sous ordonance</span>
              </div>
              <div>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full">Action</span>
              </div>
            </div>
          </div>
        <% end %>
        <% @medicaments.each do |medicament| %>
          <div class="bg-white rounded-lg shadow p-4">
            <div class="flex justify-between items-start gap-3">
              <div class="flex-1 min-w-0">
                <h3 class="text-sm font-medium text-gray-900 wrap-break-word"><%= medicament.nom %></h3>
                <p class="text-sm text-gray-500 mt-1"><%= medicament.format %></p>
              </div>
              <div>
                <% if medicament.ordonnance %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Oui</span>
                <% else %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Non</span>
                <% end %>
              </div>
              <div>
                <% pillatheque_medicament = @pillatheque.pillatheque_medicaments.find_by(medicament: medicament) %>
                <%= button_to pillatheque_pillatheque_medicament_path(@pillatheque, pillatheque_medicament),
                      method: :delete,
                      class: "text-red-600 hover:text-red-900 cursor-pointer",
                      data: { turbo_confirm: "Retirer ce médicament de votre pillathèque ?" } do %>
                  Retirer
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="bg-white rounded-lg shadow p-8 text-center text-gray-500">
          <p class="mb-4">Votre pillathèque est vide</p>
          <%= link_to medicaments_path, class: "text-blue-600 hover:text-blue-500 font-medium" do %>
            Ajouter votre premier médicament
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
