<div class="pillami-page-wrapper pt-16 pb-8 px-4">
  <div class="pillami-page-container max-w-4xl mx-auto">
    <div class="pillami-page-header flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-8">
      <div>
        <h1 class="pillami-page-title text-3xl font-bold text-gray-900">Ma Pillathèque</h1>
        <p class="pillami-page-subtitle mt-2 text-sm text-gray-600"><%= @medicaments.count %> médicament(s)</p>
      </div>
      <%= link_to medicaments_path,class: "pillami-btn-primary inline-block px-4 py-2 text-center", id: "add_med" do %>
        + Ajouter un médicament
      <% end %>
    </div>

    <!-- CARTE D'EN-TÊTE DES MÉDICAMENTS -->
    <div class="pillami-medicament-card bg-white rounded-lg shadow p-4 mb-2">
      <div class="pillami-medicament-card-info flex justify-between items-center gap-3 font-semibold text-gray-700">
        <div class="pillami-medicament-info flex-1 min-w-0">Nom du médicament</div>
        <div class="pillami-medicament-ordonnance" style="width: 120px; text-align: center;">Sous ordonnance</div>
      </div>
    </div>

    <div class="pillami-medicaments-list space-y-3">
      <% if @medicaments.any? %>
        <% @medicaments.each do |medicament| %>
          <div class="pillami-medicament-card bg-white rounded-lg shadow p-4">
            <div class="pillami-medicament-card-body flex justify-between items-start gap-3">

              <!-- NOM + FORMAT dans une seule div -->
              <div class="pillami-medicament-info flex-1 min-w-0">
                <div>
                  <h3 class="pillami-medicament-name text-sm font-medium text-gray-900 wrap-break-word">
                    <%= medicament.nom %>
                  </h3>
                  <p class="pillami-medicament-format text-sm text-gray-500 mt-1">
                    <%= medicament.format %>
                  </p>
                </div>
              </div>

              <!-- ORDONNANCE + RETIRER dans la même div -->
              <div class="pillami-medicament-ordonnance flex flex-col items-center" style="width: 120px; text-align: center;">
                <% if medicament.ordonnance %>
                  <span class="pillami-pill-tag pillami-pill-ordonnance-oui mb-2">Oui</span>
                <% else %>
                  <span class="pillami-pill-tag pillami-pill-ordonnance-non mb-2">Non</span>
                <% end %>

                <% pillatheque_medicament = @pillatheque.pillatheque_medicaments.find_by(medicament: medicament) %>
                <%= button_to pillatheque_pillatheque_medicament_path(@pillatheque, pillatheque_medicament),
                      method: :delete,
                      data: { turbo_confirm: "Êtes-vous sûr de supprimer ce médicament de votre pillothèque ?" },
                      class: "pillami-btn-action" do %>
                  Retirer
                <% end %>
              </div>

            </div>
          </div>
        <% end %>
      <% else %>
        <div class="pillami-empty-card bg-white rounded-lg shadow p-8 text-center text-gray-500">
          <p>Votre pillathèque est vide</p>
        </div>
      <% end %>
    </div>

    <%= render "shared/back_button" %>
  </div>
</div>
