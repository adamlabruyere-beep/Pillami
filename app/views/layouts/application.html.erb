<!DOCTYPE html>
<html>
  <head>
    <title>Pillami</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <div data-controller="mobile-menu" class="min-h-screen">
      <!-- Header fixe avec logo PILLAMI -->
      <header id="ici" class="fixed top-0 left-0 right-0 z-50 bg-white border-b border-gray-100 shadow-sm">
        <div class="flex justify-center items-center h-14 md:h-16">
          <%= link_to root_path(current_user), data: { mobile_menu_target: "logo" }, class: "transition-all duration-300 ease-in-out block rounded-lg px-4 py-2 text-lg font-bold text-gray-700 hover:bg-gray-100 hover:text-gray-900" do %>
            PILLAMI
          <% end %>
        </div>
      </header>
      <!-- Spacer pour compenser le header fixe -->
      <div class="h-14 md:h-16"></div>
      <!-- Bouton hamburger mobile -->
      <button data-action="click->mobile-menu#toggle" class="md:hidden fixed top-2 left-4/5 z-50 p-2 bg-white rounded-lg shadow-lg text-gray-600 hover:text-gray-900">
        <svg data-mobile-menu-target="openIcon" xmlns="http://www.w3.org/2000/svg" class="size-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg data-mobile-menu-target="closeIcon" xmlns="http://www.w3.org/2000/svg" class="size-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
      <!-- Overlay -->
      <div data-mobile-menu-target="overlay" data-action="click->mobile-menu#close" class="hidden fixed inset-0 bg-black/50 z-30 md:hidden"></div>
      <div class="flex min-h-screen">
        <div class="shrink-0 transition-all duration-300">
          <%= render "shared/navbar" %>
        </div>
        <div class="flex-1" style="
    margin: 15px;
">
          <%= render "shared/flashes" %>
          <%= yield %>
        </div>
      </div>
    </div>

    <!-- Container pour les notifications Solid Cable -->
    <div id="reminder-alerts" style="position: fixed; top: 10px; right: 10px; z-index: 1000;"></div>
  </body>
</html>
