<h1>index</h1>
<p>List of reminders</p>
<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold">Mes Rappels</h1>
  <%= link_to 'Ajouter', new_reminder_path, class: "btn btn-primary" %>
</div>

<% if @reminders.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @reminders.each do |reminder| %>
      <div class="card bg-base-100 w-96 shadow-sm cursor-pointer" onclick="window.location='<%= reminder_path(reminder) %>'">
        <div class="card-body">
          <h2 class="card-title"><%= reminder.medicament.nom %></h2>
          <p class="text-gray-500">
            Heure : <%= reminder.time.strftime("%H:%M") %> |
            QuantitÃ© : <%= reminder.quantity %>
            <%= reminder.measure %>
          </p>
          <div class="card-actions justify-end">
            <%= button_to "Delete", reminder_path(reminder), method: :delete, class: "btn btn-neutral btn-outline", data: { confirm: "Voulez-vous vraiment supprimer ce rappel ?" } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-gray-500 text-center mt-10">Vous n'avez pas encore de rappels.</p>
<% end %>
