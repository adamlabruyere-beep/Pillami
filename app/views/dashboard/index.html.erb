<!-- app/views/dashboard/index.html.erb -->

<div class="container mx-auto px-4 py-6 space-y-6 dash-container">

  <!-- Médicaments du dernier rappel -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">dernier rappel</h2>

    <% if @last_reminder && @last_reminder.medicament.present? %>
      <ul class="divide-y divide-gray-200">
        <li class="px-4 py-2 grid grid-cols-3 gap-4 font-medium text-gray-700 bg-gray-50 rounded-t-lg">
          <span>Nom du médicament</span>
          <span>Dose</span>
          <span>Heure</span>
        </li>
        <li class="px-4 py-2 grid grid-cols-3 gap-4 items-center">
          <span><%= @last_reminder.medicament.nom %></span>
          <span><%= @last_reminder.quantity %> <%= @last_reminder.measure %></span>
          <span><%= @last_reminder.time.strftime("%H:%M") %></span>
        </li>
      </ul>
    <% else %>
      <p class="text-gray-500">Aucun rappel récent pour le moment.</p>
    <% end %>
  </div>


  <!-- Personnes que je suis -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Personnes que je suis (<%= @following.count %>)</h3>
      <p class="text-sm text-gray-500 mt-1">Ces personnes vous ont ajouté à leur entourage</p>
    </div>

    <% if @following.any? %>
      <ul class="divide-y divide-gray-200">
        <% @following.each do |entourage| %>
          <li class="px-6 py-4 flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="size-10 rounded-full overflow-hidden bg-green-600 flex items-center justify-center text-white font-medium shrink-0">
                <% if entourage.user.photo.attached? %>
                  <%= cl_image_tag entourage.user.photo.key, crop: :fill, width: 40, height: 40, class: "size-10 object-cover" %>
                <% else %>
                  <%= entourage.user.email[0].upcase %>
                <% end %>
              </div>
              <div>
                <p class="font-medium text-gray-900"><%= entourage.user.prenom %> <%= entourage.user.nom %></p>
                <p class="text-sm text-gray-500"><%= entourage.user.email %></p>
              </div>
            </div>

            <%= link_to "calendrier de #{entourage.user.prenom}",
                        user_calendrier_path(entourage.user),
                        class: "entourage-calendrier-btn" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="px-6 py-8 text-center text-gray-500">
        <p>Vous ne suivez personne pour le moment.</p>
        <p class="text-sm mt-1">Quand quelqu'un vous ajoutera à son entourage, il apparaîtra ici.</p>
      </div>
    <% end %>
  </div>

</div>
