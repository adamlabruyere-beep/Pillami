<!-- app/views/dashboard/index.html.erb -->

<div class="dash-container mx-auto px-4 py-6 space-y-6">

  <!-- Progression du jour -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between mb-3">
      <h3 class="text-lg font-medium text-gray-900">Ma progression du jour</h3>
      <span class="text-sm font-semibold text-blue-600"><%= @taken_today %>/<%= @total_reminders_today %> pris</span>
    </div>

    <% if @total_reminders_today > 0 %>
      <div class="w-full bg-gray-200 rounded-full h-4 overflow-hidden">
        <div class="h-4 rounded-full transition-all duration-500 <%= @progress_percentage == 100 ? 'bg-green-500' : 'bg-blue-600' %>"
             style="width: <%= @progress_percentage %>%;">
        </div>
      </div>
      <p class="text-sm text-gray-500 mt-2">
        <% if @progress_percentage == 100 %>
          Bravo ! Tous vos médicaments ont été pris.
        <% elsif @progress_percentage >= 50 %>
          Continuez comme ça, vous y êtes presque !
        <% else %>
          N'oubliez pas de prendre vos médicaments.
        <% end %>
      </p>
    <% else %>
      <p class="text-sm text-gray-500">Aucun rappel prévu pour aujourd'hui.</p>
    <% end %>
  </div>

  <!-- Médicaments du dernier rappel -->
  <h2 class="text-xl font-semibold text-gray-900 mb-4">Dernier rappel</h2>
<% if @last_reminder && @last_reminder.medicament.present? %>
  <div class="reminders-grid">
    <div class="reminder-card">
      <div class="reminder-body">
        <h2 class="reminder-title"><%= @last_reminder.medicament.nom %></h2>
        <p class="reminder-text">
          Heure :
          <%= @last_reminder.time.present? ? @last_reminder.time.strftime("%H:%M") : "Non définie" %> |
          <%= pluralize_fr(@last_reminder.quantity, @last_reminder.measure) %>
        </p>
      </div>
    </div>
  </div>
<% else %>
  <p class="text-gray-500">Aucun rappel récent pour le moment.</p>
<% end %>



  <!-- Personnes que je suis -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Personnes que je suis (<%= @following.count %>)</h3>
      <p class="text-sm text-gray-500 mt-1">Ces personnes vous ont ajouté à leur entourage</p>
    </div>

    <% if @following.any? %>
      <ul class="divide-y divide-gray-200">
        <% @following.each do |entourage| %>
          <li class="px-6 py-4 flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="size-10 rounded-full overflow-hidden bg-green-600 flex items-center justify-center text-white font-medium shrink-0">
                <% if entourage.user.photo.attached? %>
                  <%= cl_image_tag entourage.user.photo.key, crop: :fill, width: 40, height: 40, class: "size-10 object-cover" %>
                <% else %>
                  <%= entourage.user.email[0].upcase %>
                <% end %>
              </div>
              <div>
                <p class="font-medium text-gray-900"><%= entourage.user.prenom %> <%= entourage.user.nom %></p>
                <p class="text-sm text-gray-500"><%= entourage.user.email %></p>
              </div>
            </div>

            <%= link_to "calendrier de #{entourage.user.prenom}",
                        user_calendrier_path(entourage.user),
                        class: "entourage-calendrier-btn" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="px-6 py-8 text-center text-gray-500">
        <p>Vous ne suivez personne pour le moment.</p>
        <p class="text-sm mt-1">Quand quelqu'un vous ajoutera à son entourage, il apparaîtra ici.</p>
      </div>
    <% end %>
  </div>

  <%= render "shared/back_button" %>

</div>
