<div class="min-h-screen flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900">Créer un compte</h2>
      <p class="mt-2 text-sm text-gray-600">
        Déjà inscrit ?
        <%= link_to "Se connecter", new_user_session_path, class: "font-medium text-blue-600 hover:text-blue-500" %>
      </p>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
      <%= f.error_notification message: "Veuillez corriger les erreurs ci-dessous :", class: "bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg" %>
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :prenom, "Prénom", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :prenom,
                  required: true,
                  autocomplete: "given-name",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          <div>
            <%= f.label :nom, "Nom", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :nom,
                  required: true,
                  autocomplete: "family-name",
                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>
        <div>
          <%= f.label :password, "Mot de passe", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password,
                required: true,
                autocomplete: "new-password",
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <% if @minimum_password_length %>
            <p class="mt-1 text-xs text-gray-500"><%= @minimum_password_length %> caractères minimum</p>
          <% end %>
        </div>
        <div>
          <%= f.label :password_confirmation, "Confirmer le mot de passe", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation,
                required: true,
                autocomplete: "new-password",
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>
      <div>
        <%= f.submit "S'inscrire", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
