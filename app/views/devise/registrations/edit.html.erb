<div class="min-h-screen flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900">Mon profil</h2>
      <p class="mt-2 text-sm text-gray-600">Modifier mes informations personnelles</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "mt-8 space-y-6" }) do |f| %>
      <%= f.error_notification message: "Veuillez corriger les erreurs ci-dessous :", class: "bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg" %>

      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :prenom, "Prénom", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :prenom,
                  required: true,
                  autocomplete: "given-name",
                  class: "w-full px-3 py-2 border #{resource.errors[:prenom].any? ? 'border-red-500' : 'border-gray-300'} rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
            <% if resource.errors[:prenom].any? %>
              <p class="mt-1 text-xs text-red-600"><%= resource.errors[:prenom].first %></p>
            <% end %>
          </div>

          <div>
            <%= f.label :nom, "Nom", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :nom,
                  required: true,
                  autocomplete: "family-name",
                  class: "w-full px-3 py-2 border #{resource.errors[:nom].any? ? 'border-red-500' : 'border-gray-300'} rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
            <% if resource.errors[:nom].any? %>
              <p class="mt-1 text-xs text-red-600"><%= resource.errors[:nom].first %></p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email,
                required: true,
                autofocus: true,
                autocomplete: "email",
                class: "w-full px-3 py-2 border #{resource.errors[:email].any? ? 'border-red-500' : 'border-gray-300'} rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <% if resource.errors[:email].any? %>
            <p class="mt-1 text-xs text-red-600"><%= resource.errors[:email].first %></p>
          <% elsif devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p class="mt-1 text-xs text-amber-600">En attente de confirmation pour : <%= resource.unconfirmed_email %></p>
          <% end %>
          <%= f.input :photo, as: :file %>
        </div>

        <hr class="border-gray-200">

        <p class="text-sm text-gray-500">Laissez les champs mot de passe vides si vous ne souhaitez pas le modifier.</p>

        <div>
          <%= f.label :password, "Nouveau mot de passe", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password,
                autocomplete: "new-password",
                class: "w-full px-3 py-2 border #{resource.errors[:password].any? ? 'border-red-500' : 'border-gray-300'} rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <% if resource.errors[:password].any? %>
            <p class="mt-1 text-xs text-red-600"><%= resource.errors[:password].first %></p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation,
                autocomplete: "new-password",
                class: "w-full px-3 py-2 border #{resource.errors[:password_confirmation].any? ? 'border-red-500' : 'border-gray-300'} rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <% if resource.errors[:password_confirmation].any? %>
            <p class="mt-1 text-xs text-red-600"><%= resource.errors[:password_confirmation].first %></p>
          <% end %>
        </div>

        <hr class="border-gray-200">

        <div>
          <%= f.label :current_password, "Mot de passe actuel", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :current_password,
                required: true,
                autocomplete: "current-password",
                class: "w-full px-3 py-2 border #{resource.errors[:current_password].any? ? 'border-red-500' : 'border-gray-300'} rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <% if resource.errors[:current_password].any? %>
            <p class="mt-1 text-xs text-red-600"><%= resource.errors[:current_password].first %></p>
          <% else %>
            <p class="mt-1 text-xs text-gray-500">Requis pour confirmer vos modifications</p>
          <% end %>
        </div>
      </div>

      <div>
        <%= f.submit "Mettre à jour", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
      </div>
    <% end %>

    <div class="mt-8 pt-6 border-t border-gray-200">
      <h3 class="text-lg font-medium text-red-600">Supprimer mon compte</h3>
      <p class="mt-1 text-sm text-gray-500">Cette action est irréversible.</p>
      <div class="mt-4">
        <%= button_to "Supprimer mon compte",
              registration_path(resource_name),
              method: :delete,
              data: { turbo_confirm: "Êtes-vous sûr de vouloir supprimer votre compte ?" },
              class: "px-4 py-2 border border-red-300 rounded-lg text-sm font-medium text-red-600 hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 cursor-pointer" %>
      </div>
    </div>

    <div class="text-center">
      <%= link_to "← Retour", root_path, class: "text-sm font-medium text-gray-600 hover:text-gray-500" %>
    </div>
  </div>
</div>
