<div data-mobile-menu-target="nav" class="fixed top-14 md:top-16 bottom-0 left-0 z-40 -translate-x-full md:translate-x-0 transition-transform duration-300">
  <div class="flex h-full flex-col border-e border-gray-100 bg-white overflow-hidden" data-controller="sidebar" data-sidebar-target="sidebar">
    <div class="px-4 py-6 flex-1 flex flex-col">
      <!-- Placeholder pour le logo PILLAMI (mobile uniquement) -->
      <div data-mobile-menu-target="logoPlaceholder" class="md:hidden mb-4 opacity-0 -translate-y-4 transition-all duration-300 ease-in-out">
        <%= link_to root_path(current_user), class: "block rounded-lg px-4 py-2 text-lg font-bold text-gray-700 hover:bg-gray-100 hover:text-gray-900" do %>
          PILLAMI
        <% end %>
      </div>
      <!-- Toggle button -->
      <button data-action="click->sidebar#toggle" class="hidden md:block mb-4 p-2 rounded-lg hover:bg-gray-100 text-gray-500 hover:text-gray-700 transition-colors">
        <svg data-sidebar-target="expandIcon" xmlns="http://www.w3.org/2000/svg" class="size-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 5l7 7-7 7M5 5l7 7-7 7" />
        </svg>
        <svg data-sidebar-target="collapseIcon" xmlns="http://www.w3.org/2000/svg" class="size-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11 19l-7-7 7-7m8 14l-7-7 7-7" />
        </svg>
      </button>
      <ul class="mt-6 space-y-3">
        <% if user_signed_in? %>
          <li data-sidebar-target="text">
            <%= link_to pillatheque_path(current_user.pillatheque), class: "block rounded-lg px-4 py-3 text-base font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700" do %>
              Pillatheque
            <% end %>
          </li>
          <li data-sidebar-target="text">
            <%= link_to user_reminders_path(current_user), class: "flex items-center rounded-lg px-4 py-3 text-base font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700" do %>
              Mes rappels
            <% end %>
          </li>
          <li data-sidebar-target="text">
            <%= link_to user_calendrier_path(current_user), class: "flex items-center rounded-lg px-4 py-3 text-base font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700" do %>
              Calendrier
            <% end %>
          </li>
          <li data-sidebar-target="text">
            <%= link_to user_sensations_path(current_user), class: "flex items-center rounded-lg px-4 py-3 text-base font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700" do %>
              Mes sensations
            <% end %>
          </li>
          <li data-sidebar-target="text">
            <%= link_to entourage_path, class: "flex items-center rounded-lg px-4 py-3 text-base font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700" do %>
              Mon entourage
            <% end %>
          </li>
        <% else %>
          <li data-sidebar-target="text">
            <%= link_to new_user_session_path, class: "flex items-center rounded-lg px-4 py-3 text-base font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700" do %>
              Connexion
            <% end %>
          </li>
          <li data-sidebar-target="text">
            <%= link_to new_user_registration_path, class: "flex items-center rounded-lg px-4 py-3 text-base font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700" do %>
              S'inscrire
            <% end %>
          </li>
        <% end %>
      </ul>
      <div class="mt-auto pt-6 text-xs text-gray-500 space-y-1">
        <a href="#" class="block text-gray-500 hover:text-gray-700 transition-colors">CGU</a>
        <a href="#" class="block text-gray-500 hover:text-gray-700 transition-colors">Mentions légales</a>
      </div>
    </div>
    <% if user_signed_in? %>
      <div data-sidebar-target="text" class="shrink-0 border-t border-gray-100 relative bg-white">
        <details class="group [&_summary::-webkit-details-marker]:hidden">
          <summary class="flex cursor-pointer items-center gap-2 bg-white p-4 hover:bg-gray-50 whitespace-nowrap">
            <div class="size-10 rounded-full flex items-center justify-center shrink-0 overflow-hidden bg-blue-600 text-white font-medium">
              <% if current_user.photo.attached? %>
                <%= cl_image_tag current_user.photo.key, crop: :fill, width: 40, height: 40, class: "size-10 object-cover", "data-sidebar-target": "avatar" %>
              <% else %>
                <%= current_user.email[0].upcase %>
              <% end %>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-xs truncate">
                <strong class="block font-medium truncate"><%= current_user.email.split('@').first %></strong>
                <span class="truncate"><%= current_user.email %></span>
              </p>
            </div>
            <span class="shrink-0 transition duration-300 group-open:rotate-180 text-gray-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd"></path>
              </svg>
            </span>
          </summary>
          <ul class="absolute bottom-full left-0 right-0 bg-white py-2 space-y-1 border-t border-gray-100 shadow-lg">
            <li>
              <%= link_to edit_user_registration_path, class: "block px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700" do %>
                Mon profil
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "block px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700" do %>
                Déconnexion
              <% end %>
            </li>
          </ul>
        </details>
      </div>
    <% end %>
  </div>
</div>
