<div class="flex h-screen flex-col justify-between border-e border-gray-100 bg-white" data-controller="sidebar" data-sidebar-target="sidebar">
  <div class="px-4 py-6">
    <!-- Toggle button -->
    <button data-action="click->sidebar#toggle" class="mb-4 p-2 rounded-lg hover:bg-gray-100 text-gray-500 hover:text-gray-700 transition-colors">
      <svg data-sidebar-target="expandIcon" xmlns="http://www.w3.org/2000/svg" class="size-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13 5l7 7-7 7M5 5l7 7-7 7" />
      </svg>
      <svg data-sidebar-target="collapseIcon" xmlns="http://www.w3.org/2000/svg" class="size-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M11 19l-7-7 7-7m8 14l-7-7 7-7" />
      </svg>
    </button>

    <ul class="mt-6 space-y-1">
      <% if user_signed_in? %>
        <li data-sidebar-target="text">
          <details class="group [&_summary::-webkit-details-marker]:hidden">
            <summary class="flex cursor-pointer items-center justify-between rounded-lg px-4 py-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700">
              <span class="text-sm font-medium">Pillatheque</span>

              <span class="shrink-0 transition duration-300 group-open:-rotate-180">
                <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
              </span>
            </summary>

            <ul class="mt-2 space-y-1 px-4">
              <li>
                <%= link_to pillatheque_path(current_user.pillatheque), class: "block rounded-lg px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700" do %>
                  Mes médicaments
                <% end %>
              </li>

            <li>
              <a href="#" class="block rounded-lg px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700">
                Ajouter un medicaments
              </a>
            </li>
          </ul>
        </details>
      </li>
      <% end %>

      <li data-sidebar-target="text">
        <a href="calendriers" class="flex items-center rounded-lg px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700">
          Calendrier
        </a>
      </li>

      <li data-sidebar-target="text">
        <a href="#" class="flex items-center rounded-lg px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700">
          Mes rappels
        </a>
      </li>

      <% if user_signed_in? %>
        <li data-sidebar-target="text">
          <details class="group [&_summary::-webkit-details-marker]:hidden">
            <summary class="flex cursor-pointer items-center justify-between rounded-lg px-4 py-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700">
              <span class="text-sm font-medium">Mon compte</span>

              <span class="shrink-0 transition duration-300 group-open:-rotate-180">
                <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
              </span>
            </summary>

            <ul class="mt-2 space-y-1 px-4">
              <li>
                <%= link_to edit_user_registration_path, class: "block rounded-lg px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700" do %>
                  Mon profil
                <% end %>
              </li>

              <li>
                <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "block rounded-lg px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700" do %>
                  Déconnexion
                <% end %>
              </li>
            </ul>
          </details>
        </li>
      <% else %>
        <li data-sidebar-target="text">
          <%= link_to new_user_session_path, class: "flex items-center rounded-lg px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700" do %>
            Connexion
          <% end %>
        </li>

        <li data-sidebar-target="text">
          <%= link_to new_user_registration_path, class: "flex items-center rounded-lg px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700" do %>
            S'inscrire
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <% if user_signed_in? %>
    <div data-sidebar-target="text" class="sticky inset-x-0 bottom-0 border-t border-gray-100">
      <%= link_to edit_user_registration_path, class: "flex items-center gap-2 bg-white p-4 hover:bg-gray-50" do %>
        <div class="size-10 rounded-full bg-blue-600 flex items-center justify-center text-white font-medium shrink-0">
          <%= current_user.email[0].upcase %>
        </div>

        <div>
          <p class="text-xs">
            <strong class="block font-medium"><%= current_user.email.split('@').first %></strong>
            <span><%= current_user.email %></span>
          </p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
